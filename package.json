{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up --build -d",
    "docker:prod": "docker-compose -f docker/docker-compose.prod.yml up --build -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down && docker-compose -f docker/docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "start": "make start",
    "setup": "make setup"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
